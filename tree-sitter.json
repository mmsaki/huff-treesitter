{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/config.schema.json",
  "grammars": [
    {
      "name": "huff",
      "camelcase": "Huff",
      "title": "Huff",
      "scope": "source.huff",
      "file-types": [
        "huff"
      ],
      "injection-regex": "^huff$",
      "class-name": "TreeSitterHuff"
    }
  ],
  "metadata": {
    "version": "0.1.0",
    "license": "MIT",
    "description": "Tree-sitter grammar for the EVM Huff language",
    "authors": [
      {
        "name": "Meek Msaki",
        "email": "meek10x@gmail.com"
      }
    ],
    "links": {
      "repository": "https://github.com/mmsaki/huff-treesitter.git",
      "funding": "https://github.com/sponsors/mmsaki"
    }
  },
  "bindings": {
    "c": true,
    "go": true,
    "node": true,
    "python": true,
    "rust": true,
    "swift": true,
    "zig": false
  }
}